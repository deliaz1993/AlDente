<p id="notice"><%= notice %></p>
<br>
<br>
<br>

<p>
  <strong>Waiter name:</strong>
  <%= @session.waiter_name %>
</p>

<p>
  <strong>Ipad ID:</strong>
  <%= @session.ipad_id %>
</p>

<p>
  <strong>Restaurant:</strong>
  <%= @session.restaurant.name %>
</p>

<div class="page-header">
  <h1>Listing ordered items</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Item</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ordered_items.each do |ordered_item| %>
      <tr>
        <td><%= link_to ordered_item.item.name, edit_ordered_item_path(ordered_item) %></td>
        <td><%= link_to 'Show', ordered_item %></td>
        <td><%= link_to 'Destroy', ordered_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group">
<button type="button" class="btn btn-default"><%= link_to 'Edit', edit_session_path(@session) %></button>
</div>

<div class="btn-group">
<button type="button" class="btn btn-default">
<%= link_to 'Back', sessions_path %></button>
</div>
